{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "whos-that-pokemon",
  "version": "0.1.0",
  "identifier": "com.vince.whos-that-pokemon",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Who's that Pokemon?",
        "width": 1102,
        "height": 567,
        "resizable": false,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
